<% provide :title, t(".title", test_name: @test.name) %>
<h1 class="text-center"><%= t(".title", test_name: @test.name) %></h1>

<div class="table-responsive">
  <table class="table table-striped table-responsive">
    <thead>
      <tr>
        <th><%= t(".index") %></th>
        <th><%= t(".user") %></th>
        <th><%= t(".time") %></th>
        <th><%= t(".score") %></th>
        <th><%= t(".view") %></th>
      </tr>
    </thead>

    <tbody>
      <% @results.each.with_index do |result, index| %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= link_to result.user.name, result.user %></td>
          <td><%= l(result.created_at, format: :short) %></td>
          <td><%= result.score %></td>
          <td>
            <%= link_to "#", class: "button" do %>
              <i class="fa fa-eye"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= will_paginate %>
