<%= render "shared/error_messages", object: test %>
<%= form_for test do |f| %>
  <div class="form-group">
    <%= f.label :name, t(".name") %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="row">
    <div class="form-group col-md-6">
      <%= f.label :kind, t(".kind") %>
      <%= f.select :kind, [[t(".git"), :git], [t(".rails"), :rails]],
        { include_blank: "--Select something--" }, class: "form-control" %>
    </div>

    <div class="form-group col-md-6">
      <%= f.label :time, t(".time") %>
      <%= f.number_field :time, min: 1, class: "form-control" %>
    </div>
  </div>

  <div class="form-group text-center">
    <%= f.submit t("submit"), class: "btn btn-primary" %>
  </div>

<% end %>
