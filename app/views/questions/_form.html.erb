<h1 class="text-center"><%= t ".update_questions"%></h1>
<%= render "shared/error_messages", object: question %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @question do |f| %>
      <div class="form-group">
        <%= f.label :content, t(".question_content") %>
        <%= f.text_field :content, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.fields_for :answers do |answer| %>
          <%= answer.label :content, t(".answer") %>
          <%= answer.text_field :content, class: "form-control" %>
        <% end %>
      </div>
      <div class="form-group text-center">
        <%= f.submit t("submit"), class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
<div class="form-group text-center">
  <%= link_to t(".back_to_test"), test_path(question.test) %>
</div>
