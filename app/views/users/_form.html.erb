<%= render "shared/error_messages", object: user %>
<%= form_for user do |f| %>
  <div class="form-group">
    <%= f.label :name, t(".name") %>
    <%= f.text_field :name, class: "form-control", value: user.name, required: true %>
  </div>

  <div class="form-group">
    <%= f.label :email, t(".email") %>
    <%= f.email_field :email, class: "form-control", value: user.email, required: true %>
  </div>

  <% if current_user&.is_admin? %>
    <div class="form-group">
      <%= f.label :is_admin, t(".is_admin") %>
      <%= f.check_box :is_admin %>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :password, t(".password") %>
    <%= f.password_field :password, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, t(".password_confirmation") %>
    <%= f.password_field :password_confirmation, class: "form-control" %>
  </div>

  <div class="form-group">
    <% if current_user&.is_admin? %>
      <%= f.submit t("submit"), class: "btn btn-primary btn-block" %>
    <% else %>
      <%= f.submit t("sign_up"), class: "btn btn-primary btn-block" %>
    <% end%>
  </div>
<% end %>
